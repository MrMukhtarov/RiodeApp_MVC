
@model List<BasketItemProductVM>

        @foreach (var item in Model)
        {
            <div class="product product-cart">
                <figure class="product-media">
                    <a asp-action="Detail" asp-controller="Shop">
                        <img src="~/@item.Product.MainImage" alt="product" width="80"
                             height="88" />
                    </a>
                    <button class="btn btn-link btn-close">
                        <i class="fas fa-times"></i><span class="sr-only">Close</span>
                    </button>
                </figure>
                <div class="product-detail">
                    <a asp-action="Detail" asp-controller="Shop" class="product-name">@item.Product.Name</a>
                    <div class="price-box">
                        <span class="product-quantity">1</span>
                        <div class="product-price">
                            @if (item.Product.Discount > 0)
                            {
                                <ins class="new-price">$@String.Format("{0:0.00}",@item.Product.Price - (item.Product.Price * item.Product.Discount / 100))</ins>
                                <del class="old-price">$@item.Product.Price</del>
                            }
                            else
                            {
                                <ins class="new-price">$@item.Product.Price</ins>
                            }
                        </div>>
                    </div>
                </div>

            </div>
        }
 
    <!-- End of Products  -->
    <div class="cart-total">
        <label>Subtotal:</label>
        <span class="price">$@ViewBag.SubTotalPrice</span>
    </div>
    <!-- End of Cart Total -->
    <div class="cart-action">
        <a href="cart.html" class="btn btn-dark btn-link">View Cart</a>
        <a href="checkout.html" class="btn btn-dark"><span>Go To Checkout</span></a>
    </div>
    <!-- End of Cart Action -->
</div>

